extends base

block content
  .ui.placeholder.segment
    .ui.center.aligned.basic.segment
      .ui.icon.header
        i.grey.id.badge.icon
        .ui.statistic
          .label code
          .value= title
      table.ui.striped.table
        thead
          tr
            th User Badges
            th Last 3 Digits
            th.right.aligned Expired in
        tbody
          if auths
            each auth in auths
              - var check_expire = {'disabled': auth.expired == 'expired'}
              tr(class=check_expire)
                td
                  each badge in auth.badges
                    i.bordered.large.icon(class=badge class=check_expire)
                td= auth.digits
                td.right.aligned= auth.expired|capitalize
          else
            tr
              td.center.aligned(colspan='3') No records found.

